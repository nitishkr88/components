{
  "name": "@nitish/components",
  "version": "0.1.0",
  "description": "Set of reusable components based on design system",
  "main": "./lib/index.js",
  "module": "./es/index.js",
  "scripts": {
    "analyze": "webpack src/index.js dist/components.js -p --bail --profile --json > stats.json && webpack-bundle-analyzer stats.json",
    "build": "npm run build:lib && npm run build:es",
    "build:lib": "babel src --out-dir lib --ignore __tests__,README.md --copy-files",
    "build:es": "cross-env BABEL_ENV=es babel src --out-dir es --ignore __tests__,README.md --copy-files",
    "clean": "rimraf dist lib es",
    "lint": "eslint src",
    "precommit": "lint-staged",
    "prepublish": "npm run lint && npm run clean && npm run build:lib && npm run build:es",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build",
    "test": "cross-env NODE_ENV=test jest --runInBand",
    "test:watch": "npm test -- --watch",
    "test:cov": "npm run test -- --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.org/nitishkr88/components.git"
  },
  "author": "Nitish",
  "license": "MIT",
  "homepage": "https://github.org/nitishkr88/components#readme",
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-decorators": "^7.0.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.0.0",
    "@babel/plugin-proposal-function-sent": "^7.0.0",
    "@babel/plugin-proposal-json-strings": "^7.0.0",
    "@babel/plugin-proposal-numeric-separator": "^7.0.0",
    "@babel/plugin-proposal-throw-expressions": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-syntax-import-meta": "^7.0.0",
    "@babel/plugin-transform-modules-commonjs": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.4.2",
    "babel-loader": "^8.0.4",
    "babel-plugin-lodash": "^3.3.4",
    "babel-preset-es2015-no-commonjs": "0.0.2",
    "cross-env": "^5.2.0",
    "eslint": "^5.8.0",
    "eslint-config-react-app": "^3.0.5",
    "eslint-plugin-babel": "^5.2.1",
    "eslint-plugin-flowtype": "^3.2.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "file-loader": "^2.0.0",
    "husky": "^1.1.3",
    "image-webpack-loader": "^4.5.0",
    "jest": "^23.6.0",
    "lint-staged": "^8.0.4",
    "lodash-webpack-plugin": "^0.11.5",
    "prettier": "^1.14.3",
    "prettier-eslint-cli": "^4.7.1",
    "react-styleguidist": "^8.0.4",
    "rimraf": "^2.6.2",
    "webpack": "^4.25.1",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-cli": "^3.1.2"
  },
  "dependencies": {
    "hoist-non-react-statics": "^3.1.0",
    "intersection-observer": "^0.5.1",
    "lodash": "^4.17.11",
    "lodash-es": "^4.17.11",
    "popper.js": "^1.14.1",
    "prop-types": "^15.6.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-event-listener": "^0.6.4",
    "styled-components": "^4.1.1"
  },
  "lint-staged": {
    "*.{js}": [
      "prettier-eslint --write",
      "git add"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/__tests__/**/*.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "testRegex": "__tests__/.*\\.spec\\.js$",
    "testEnvironment": "jsdom"
  }
}
